// sand.kdl â€” Layout SAND pour Zellij
// Usage : zellij --layout sand --session mon-projet

layout {
    // Barre compacte en haut (onglets + statut)
    pane size=1 borderless=true {
        plugin location="zellij:compact-bar"
    }

    // Zone de travail : colonnes
    pane split_direction="vertical" {
        // Colonne gauche ~60% : terminal principal + terminal secondaire
        pane split_direction="horizontal" size="60%" {
            pane size="70%" {
                // Terminal principal (Claude Code, etc.)
            }
            pane size="30%" {
                // Terminal secondaire
            }
        }

        // Colonne droite ~40% : lazygit + yazi
        pane split_direction="horizontal" size="40%" {
            pane command="lazygit"
            pane command="yazi" {
                args "."
            }
        }
    }
}
